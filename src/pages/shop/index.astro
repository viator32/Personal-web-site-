---
import Base from "../../layouts/Base.astro";
const products = [
  { id: 'tee-1', name: 'T-Shirt', price: 24.90, img: '/assets/merch1.png' },
  { id: 'sticker-1', name: 'Sticker Pack', price: 7.90, img: '/assets/merch2.png' },
  { id: 'mug-1', name: 'Mug', price: 15.90, img: '/assets/merch3.png' }
];
---
<Base title="Shop — My Brand">
  <h1>Shop</h1>
  <div class="grid">
    {products.map(p => (
      <div class="card">
        <img src={p.img} alt={p.name} />
        <h3>{p.name}</h3>
        <button
          class="snipcart-add-item"
          data-item-id={p.id}
          data-item-name={p.name}
          data-item-price={p.price}
          data-item-url="/shop/"
          data-item-image={p.img}
        >
          Add to cart — €{p.price}
        </button>
      </div>
    ))}
  </div>
  <h2>Digital Products</h2>
  <p>Purchase my digital products via Lemon Squeezy.</p>
  <div class="digital-products">
    <a href="https://store.lemonsqueezy.com/checkout/buy/XXXXXX" class="ls-button">Buy eBook</a>
    <!-- Add more digital product buttons as needed -->
  </div>
  <button class="snipcart-checkout">Cart</button>
  <link rel="stylesheet" href="https://cdn.snipcart.com/themes/v3.6.0/default/snipcart.css" />
  <div hidden id="snipcart" data-api-key="YOUR_PUBLIC_API_KEY"></div>
  <script async src="https://cdn.snipcart.com/themes/v3.6.0/default/snipcart.js"></script>
  <script defer src="https://app.lemonsqueezy.com/js/lemon.js"></script>
</Base>
